  
<div id="container" >
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |form| %>

  <fieldset class="fields">
    <div class="field">
      <%= form.label :name, :require => true %>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <%= form.label :email , :require => true  %>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :message, :as => :text, :required => false, :input_html => {:rows => 10} %>
      <%= form.text_field :message %>
    </div>

  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Send", :class=> "btn btn-primary"%>
  </fieldset>
<% end %>
</div>