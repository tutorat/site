  
<div id="container" >
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |form| %>
      <%= form.input :name, :require => true %>
      <%= form.input :email , :require => true  %>
      <%= form.input :message, :as => :text, :required => false, :input_html => {:rows => 10} %>
      

      <div class="hidden" > <%= form.input :nickname, :hint =>'Leave this field blank' %> </div>
      <%= form.button :submit, "Send", :class=> "btn btn-primary"%>
  <% end %>
</div>